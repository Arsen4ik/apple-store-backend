generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // url      = env("DATABASE_URL")
  url      = env("POSTGRES_PRISMA_URL")
}

model Gadget {
  id            Int           @id @default(autoincrement())
  name          String
  price         Int
  discountPrice Int?
  guarantee     Int
  rating        Float
  CountReview   Int
  isAvailable   Boolean
  storeAddress  String?
  color         String
  brand         String
  country       String
  phone         Phone[]
  headphones    Headphones[]
  tablet        Tablet[]
  computer      Computer[]
  accessories   Accessories[]
  images        Images[]
}

model Phone {
  id         Int    @id @default(autoincrement())
  gadget     Gadget @relation(fields: [gadgetId], references: [id])
  gadgetId   Int
  screenSize Int
  screenName String
  memoryGB   Int
  ramGB      Int
  camera     String
}

model Headphones {
  id                        Int     @id @default(autoincrement())
  gadget                    Gadget  @relation(fields: [gadgetId], references: [id])
  gadgetId                  Int
  isNoiseReductionAvailable Boolean
}

model Tablet {
  id         Int    @id @default(autoincrement())
  gadget     Gadget @relation(fields: [gadgetId], references: [id])
  gadgetId   Int
  screenSize Int
  screenName String
  memoryGB   Int
  ramGB      Int
}

model Computer {
  id         Int    @id @default(autoincrement())
  gadget     Gadget @relation(fields: [gadgetId], references: [id])
  gadgetId   Int
  screenSize Int
  memoryGB   Int
  ramGB      Int
  OS         String
  CPU        String
}

model Accessories {
  id                    Int    @id @default(autoincrement())
  gadget                Gadget @relation(fields: [gadgetId], references: [id])
  gadgetId              Int
  forWhatKindsOfDevises String
}

model Images {
  id        Int    @id @default(autoincrement())
  gadget    Gadget @relation(fields: [gadgetId], references: [id])
  gadgetId  Int
  imageLink String
}
